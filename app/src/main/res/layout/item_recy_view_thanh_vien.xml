<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="horizontal"
    android:id="@+id/ll_dia_log_tv">

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_matv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mã thành viên"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_ten_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tên thành viên"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_nam_sinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="năm sinh"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_xoa_tv"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:src="@drawable/outline_delete_black_48" />


</LinearLayout>